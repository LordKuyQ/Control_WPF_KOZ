<Window x:Class="Control_WPF_KOZ.Auto.RegUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_WPF_KOZ.Auto"
        mc:Ignorable="d"
        Title="RegUser" Height="320" Width="256">
    <StackPanel>
        <StackPanel Margin="15" Orientation="Horizontal">
            <TextBox Name="BoxLogin" MinWidth="120"/>
            <Label Content="Логин"/>
        </StackPanel>
        <StackPanel Margin="15" Orientation="Horizontal">
            <TextBox Name="BoxName" MinWidth="120"/>
            <Label Content="Имя"/>
        </StackPanel>
        <StackPanel Margin="15" Orientation="Horizontal">
            <TextBox Name="BoxPass" MinWidth="120"/>
            <Label Content="Пароль"/>
        </StackPanel>
        <StackPanel Margin="15" Orientation="Horizontal">
            <TextBox Name="BoxTelefon" MinWidth="120"/>
            <Label Content="Телефон"/>
        </StackPanel>
        <StackPanel Margin="15" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0 0 15 0" Content="зарегистрироваться" Click="Reg_Click"/>
            <Button Content="отмена" Click="Close_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
